def findTargetSumWays(nums, target):
    def calculate(index, target):
        if index == len(nums):
            if target == 0:
                return 1
            return 0
        if (index, target) in memo:
            return memo[(index, target)]
        positive = calculate(index + 1, target - nums[index])
        negative = calculate(index + 1, target + nums[index])
        memo[(index, target)] = positive + negative
        return memo[(index, target)]

    memo = {}
    return calculate(0, target)

# Example 1
nums1 = [1, 1, 1, 1, 1]
target1 = 3
output1 = findTargetSumWays(nums1, target1)
print(output1)  # Output: 5

# Example 2
nums2 = [1]
target2 = 1
output2 = findTargetSumWays(nums2, target2)
print(output2)  # Output: 1
